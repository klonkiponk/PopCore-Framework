/**************************************\
	   IMPORT Other Content Files
\**************************************/

@import "contentHeadings";
@import "contentButtons";
@import "contentArticle";
@import "contentForms";
@import "contentLists";
@import "contentImages";
@import "contentDivs";
@import "contentP";
@import "contentTables";
@import "contentColors";

/**************************************\
	TOP ELEMENT LIKE BMW.DE
\**************************************/

#top {
	height:75px;
	background:green;
	position:fixed;
	top: 0px;
	transition: height 2s;
	-moz-transition: height 2s; /* Firefox 4 */
	-webkit-transition: height 2s; /* Safari and Chrome */
	-o-transition: height 2s; /* Opera */
	width:100%;
}

#top:hover {
	height:150px;
}

/**************************************\
	   STANDARD CONTENT ELEMENTS
\**************************************/
strong {
    font-weight:bold;
}
em {
	font-style:italic;
}
blockquote {
	font-style: italic;
	margin:20px;
	border:1px solid silver;
	padding:10px;
	background:rgba(255,255,255,0.8);
	color:gray;
}

#content p{
    text-align: justify;
    margin-bottom:5px;
}
.important {
    color:red;
    font-weight:bold;
}
#content {
    .article_content {
        padding:5px;
        p {
            margin-bottom:5px;
        }
    }
}
time {
    float:right;
    color:#ffbc40/*$AccentColor1*/;
    @include text-shadow(1px 1px 0px $AccentColor1Shadow);
    margin:0px 0px 15px 15px;
    position:absolute;
    top:29px;
    right:15px;
}
time:before {
    content:"P ";
    font-family:'SymbolFont';
    color:#ccc;
    @include text-shadow(1px 1px 0px #333);
}
.gradientbox {
    width:198px;
    height:173px;
    border:$border2;
    margin-top: 15px;
    @include rounded;
    @include shadow;
    background: #fff;
    position: relative;
}
.gradientbox:hover {
    background: rgb(255,255,255); /* Old browsers */
    background: -moz-linear-gradient(top,  rgba(255,255,255,1) 0%, rgba(243,243,243,1) 75%, rgba(237,237,237,1) 80%, rgba(255,255,255,1) 100%); /* FF3.6+ */
    background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(255,255,255,1)), color-stop(75%,rgba(243,243,243,1)), color-stop(80%,rgba(237,237,237,1)), color-stop(100%,rgba(255,255,255,1))); /* Chrome,Safari4+ */
    background: -webkit-linear-gradient(top,  rgba(255,255,255,1) 0%,rgba(243,243,243,1) 75%,rgba(237,237,237,1) 80%,rgba(255,255,255,1) 100%); /* Chrome10+,Safari5.1+ */
    background: -o-linear-gradient(top,  rgba(255,255,255,1) 0%,rgba(243,243,243,1) 75%,rgba(237,237,237,1) 80%,rgba(255,255,255,1) 100%); /* Opera 11.10+ */
    background: -ms-linear-gradient(top,  rgba(255,255,255,1) 0%,rgba(243,243,243,1) 75%,rgba(237,237,237,1) 80%,rgba(255,255,255,1) 100%); /* IE10+ */
    background: linear-gradient(top,  rgba(255,255,255,1) 0%,rgba(243,243,243,1) 75%,rgba(237,237,237,1) 80%,rgba(255,255,255,1) 100%); /* W3C */
    filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#ffffff', endColorstr='#ffffff',GradientType=0 ); /* IE6-9 */
}
.newest:before {
    position:absolute;
    top:-11px;
    right: 6px;
    width: 100px;
    height: 23px;
    line-height: 23px;
    font-size: 1em;
    content:"new";
//  text-transform: uppercase;
    text-align: center;
    color:white;
    @include rotation(0deg);
    @include textShadowLightMenu;
    @include grayGradient;
    @include shadowMenu;
    @include rounded;
}
.bignumber {
    @include rounded(75px);
    padding-top:4px;
    height:46px;
    width:50px;
    font-size:36px;
    display:inline-block;
    border:3px solid white;
    @include textShadowBold;
    background: #fce055; /* Old browsers */
    background: -moz-radial-gradient(center, ellipse cover,  #fce055 0%, #ff7b0d 100%); /* FF3.6+ */
    background: -webkit-gradient(radial, center center, 0px, center center, 100%, color-stop(0%,#fce055), color-stop(100%,#ff7b0d)); /* Chrome,Safari4+ */
    background: -webkit-radial-gradient(center, ellipse cover,  #fce055 0%,#ff7b0d 100%); /* Chrome10+,Safari5.1+ */
    background: -o-radial-gradient(center, ellipse cover,  #fce055 0%,#ff7b0d 100%); /* Opera 12+ */
    background: -ms-radial-gradient(center, ellipse cover,  #fce055 0%,#ff7b0d 100%); /* IE10+ */
    background: radial-gradient(center, ellipse cover,  #fce055 0%,#ff7b0d 100%); /* W3C */
    filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#fce055', endColorstr='#ff7b0d',GradientType=1 ); /* IE6-9 fallback on horizontal gradient */
    margin:20px;
    @include ShadowBigButton;
    text-align:center;
}
h2.bignumberdescription {
    display:inline-block;
    width:670px;
    @include grayGradientHover;
    vertical-align:middle;
    margin-top:-17px;
}
div.bignumberwrapper{
    display:inline-block;
}
div.bignumberwrapper p{
    margin-left:100px;
    font-size:13px;
}
div.bignumberwrapper .code{
    font-family:Lucidia;
    @include shadow;
    margin-left:125px;
    margin-top:20px;
    margin-bottom:20px;
    @include rounded;
    padding:10px;
    background:#fce055;//rgba(255,150,0,0.2);
}
div.bignumberwrapper h3 {
    font-size: 20px;
    text-shadow:  1px 1px 0px #f2f2f2,
                  2px 2px 0px #b1b1b2;
    padding: 0 0 0 0;
    margin: 0 0 0 0;    
}

pre.print_r {
    font-family:Monaco, Lucidia;
    padding-left:15px;
    border:2px solid #ccc;
    padding:10px;
    @include box-shadow(#fff 2px 2px 2px);
    margin-top:5px;
    position:relative;
    overflow:hidden;
}
pre.print_r:after {
    font-family:'Lucida Grande', 'Lucida Sans Unicode', Verdana, Arial, Helvetica, sans-serif;
	position: absolute;
	top:20px;
	right: -50px;
	width: 150px;
	height: 25px;
	line-height: 25px;
	font-size: 1.2em;
	font-weight: bold;
	color: #fff;
	content:"DEBUG";
	@include text-shadow(#999 1px 1px 1px);
    background-color: #ebf1f6;
    @include filter-gradient(#ebf1f6, #d5ebfb, vertical);
    @include background-image(linear-gradient(top,  #ebf1f6 0%,#abd3ee 50%,#89c3eb 51%,#d5ebfb 100%));
	text-align: center;
	@include box-shadow(0 1px 5px #999);
	-webkit-transform: rotate(45deg);
	-moz-transform: rotate(45deg);
	-o-transform: rotate(45deg);
	-ms-transform: rotate(45deg);
	transform: rotate(45deg);   }
	
	
