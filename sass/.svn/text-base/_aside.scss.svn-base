/**************************************\
			   ASIDE
\**************************************/
aside {
  padding: 10px;
  width: 176px;
  min-height: 75px;
  margin: 12px auto 18px auto;
  text-align: left;
  background: rgba(255, 255, 255, 0.85);
  border: $bordercolor;
  @include rounded;
  @include shadow;
  position:absolute;
//position:fixed;
//  left:5px;
//  top:-14px; top-align to #content
  top:10px;
  right:-117px;
  z-index:9997;
  h1 {
      margin-top:10px;
      font-size:120%;
  }
//  display:none;
  ul {
      list-style-type:square;
  }
  li {
      margin-left:30px;
      a {
          //color:#333;
          @include text-shadow(#ccc 1px 1px 1px);
          display:block;
          text-decoration:none;
          &:hover {
              text-decoration:underline;
          }
      }
  }
}